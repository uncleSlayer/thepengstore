// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products {
  id          Int             @id @unique @default(autoincrement())
  name        String
  price       Int
  description String
  Cart        Cart[]
  category    ProductCategory
  imagesUrl   imagesUrl[]
}

model imagesUrl {
  id Int @id @unique @default(autoincrement())

  url String

  product    Products @relation(fields: [productsId], references: [id])
  productsId Int
}

model Users {
  id       Int    @id @unique @default(autoincrement())
  email    String @unique
  password String
  Cart     Cart[]
}

model Cart {
  id Int @id @unique @default(autoincrement())

  owner   Users @relation(fields: [ownerId], references: [id])
  ownerId Int

  product    Products @relation(fields: [productsId], references: [id])
  productsId Int
}

model Address {
  id Int @id @unique @default(autoincrement())

  houseNumber String
  city        String
  district    String
  state       String
  pin         Int
  Order       Order[]
}

model Order {
  id Int @id @unique @default(autoincrement())

  cartId    Int
  address   Address @relation(fields: [addressId], references: [id])
  addressId Int

  orderTime DateTime

  status OrderStatus @default(ORDER_RECEIVED)
}

enum OrderStatus {
  DELIVERED
  ORDER_RECEIVED
}

enum ProductCategory {
  SAMBALPURIPATA
  SAMBALPURISAREE
}
